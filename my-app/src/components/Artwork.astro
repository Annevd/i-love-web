---
const { image, h, w } = Astro.props;
---

<li>
    <div class="outerBevel">
      <div class="flatSurface">
        <div class="innerBevel">
          <img src={image.url} alt={image.alt} title="" width={w} height={h} class="map">
        </div>
      </div>
    </div>
</li>

<style>

li {
	max-width: 100%;
	height: fit-content;
	position: relative;
	transition: 0.6s cubic-bezier(.43,1.39,.78,1.13);
	transform-origin: center top;
}

li::before {
	content: "";
	position: absolute;
	height: 10rem;
    width: 10rem;
    top: -2rem;
	background-image: url('/hook.svg');
	background-size: contain;
    background-repeat: no-repeat;
	z-index: -1;
	left: 50%;
	transform: translateX(-50%);
}

li:hover {
	transform: rotate(10deg);
	transition: 0.4s ease-in-out;
}

/* @supports (animation-timeline: auto) {
  @scroll-timeline scroll-dangle {
    source: auto; 
    orientation: block; 
    range: auto; 
  }

  li {
    animation: dangle 1s ease-in-out both;
    animation-timeline: scroll-dangle;
    transition: none;
  }
} */

@keyframes dangle {
    0% { transform: rotate(3deg); }
    100% { transform: rotate(-3deg); }
}

.outerBevel { /* of frame */
	box-shadow:	4px 6px 12px 0 black;
	border-width: 5px;
	border-style: solid;
	border-color: rgb(109, 84, 58) rgb(24, 19, 13) rgb(24, 19, 13) rgb(109, 84, 58);
}

.flatSurface { /* of frame */
	border:	12px solid rgb(65, 40, 16);
}

.innerBevel { /* of frame */
	border-width: 5px;
	border-style: solid;
	border-color: rgb(24, 19, 13)	rgb(109, 84, 58) rgb(109, 84, 58) rgb(24, 19, 13);
}

.map { /* including mat and gold beveled edge of mat */
	display: block;
	clear: both;
	height: 100%;
	width: 100%;
	padding: 7.5% 7.5% 10% 7.5%; /* Mat width */
	background-color: rgb(255,249,224); 	/* Mat color */
	border-width: 3px;	/* Gold edge of mat */
	border-style: solid;
	border-color: rgb(207, 166, 0) rgb(207, 166, 0) rgb(145, 110, 0) rgb(145, 110, 0);
}

</style>