---
const { title, url, image, description, tags} = Astro.props
---
<li>
    <a href={url}>
        <img src={image.url} width="300" alt={image.alt}>
        <h2>{title}</h2>
        <p>{description}</p>
        {tags.filter(tag => tag.trim() !== "").length > 0 &&  (
            <div>
                {tags.slice(0, 3).map((tag) => (
                    <p class="tag">{tag}</p>
                ))}
            </div>
        )}
    </a>
</li>

<style>

div {
    display: flex;
    gap: 1rem;
    margin-top: auto;
}

.tag {
    padding: 0.5rem;
    background: var(--accent-color);
    border-radius: 0.25rem;
}

li {
    background: var(--text-color);
    /* width: 19rem; */
}

img {
    width: 100%;
    height: 10rem;
    object-fit: cover;
}

a {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    height: 100%;
}

h2 {
    color: black;
}

p {
    color: black
}

</style>