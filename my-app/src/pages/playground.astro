---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
    <h1>Playground</h1>

    <p>Where I play around with new or other cool front end techniques!</p>

    <section>
        <p>Variable font test</p>
        <p>Variable font test</p>
        <p>Variable font test</p>
    </section>
</BaseLayout>

<style>

h1 {
  text-transform: uppercase;
  text-align: center;
  font-size: clamp(3rem, 10vw + 1rem, 7rem);
}

p {
    text-align: center;
    margin-bottom: 3rem;
}

section p {
    font-size: clamp(2rem, 5vw + 1rem, 3rem);;
}

section p:first-of-type {
    font-family: 'Limkin', sans-serif;
}

section p:first-of-type:hover {
    font-variation-settings: 'wght' 850;
}

section p:nth-of-type(2) {
    font-family: 'Powerpack', sans-serif;
}

section p:nth-of-type(2):hover {
    font-variation-settings: "CHRG" 47, "POWR" 100;
}

section p:nth-of-type(3) {
    font-family: 'Decovar', sans-serif;
}

section p:nth-of-type(3):hover {
    font-variation-settings: "BLDA" 0, "TRMD" 532, "TRMC" 725, "SKLD" 0, "TRML" 0, "SKLA" 136,
                        "TRMF" 0, "TRMK" 0, "BLDB" 0, "WMX2" 0, "TRMB" 572, "TRMA" 0,
                        "SKLB" 656, "TRMG" 0, "TRME" 463;
}

</style>