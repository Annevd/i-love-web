---
import BaseLayout from '../layouts/BaseLayout.astro';
import Project from '../components/Project.astro';
const allProjects = await Astro.glob('../pages/projects/*.md');
---
<BaseLayout>
  <section>
    <h1>Frontend projects</h1>

    <ul>
      {allProjects.map((project) => <Project url={project.frontmatter.url} title={project.frontmatter.title} image={project.frontmatter.image} 
      description={project.frontmatter.description} tags={project.frontmatter.tags} pubDate={project.frontmatter.pubDate} githubUrl={project.frontmatter.githubUrl}/>)}
    </ul>
</section>
</BaseLayout>

<style>

h1 {
  position: sticky;
  top: 0;
  font-size: clamp(2rem, 5vw + 1rem, 5rem);
  text-transform: uppercase;
}

section {
  display: grid;
  /* justify-items: center; */
  /* align-items: center; */
  grid-template-columns: 2fr 2fr;
}

ul {
  display: flex;
  flex-direction: column;
  gap: 3rem;
}
</style>